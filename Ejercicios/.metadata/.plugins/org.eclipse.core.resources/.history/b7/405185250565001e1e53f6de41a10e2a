package Ejercicio1;

public class Productos {

	private String descripcion[];
	private float precio[];
	
	public Productos(int cantItems)
	{
		descripcion=new String [cantItems];
		precio=new float[cantItems];
	}
	
	public void setDescripcion(String descripcion, float precio, int item) {		
		this.descripcion[item]=descripcion;		
		this.precio[item]=precio;
	}
	

	
	
}
