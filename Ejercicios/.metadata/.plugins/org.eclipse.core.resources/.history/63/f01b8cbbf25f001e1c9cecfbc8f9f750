package Ejercicios;
import java.nio.file.Paths;
import java.io.IOException;
import java.nio.file.*;
import java.util.*;


public class Ejercicio3 
{
	/**********************************************************/
	private static String codificador(String texto, int desplaCaracter) {

		byte byteTemp;
		String texto2="";
		int i;
		
		for (i=0;i<texto.length();++i)
		{		
			byteTemp = (byte)texto.charAt(i);
			byteTemp += desplaCaracter;				//Siguente Caracter
			texto2 = texto2 + (char)byteTemp;
		}

		return texto2;
	}	
	
	/**********************************************************/
	
	public static void main(String[] args) throws IOException 
	{
		
		String texto="",texto2="";
		String split[];
		int i;
		byte byteTemp;
		byte desplaza;
		
		desplaza=1;							// Cantidad de desplazamientos deseados.
		
		List lista;
		Files archivoIn = null;
		Files archivoOut = null;
		
		lista = archivoIn.readAllLines(Paths.get("./archivos_ej3/entrada.n"));
			
		for(i=0;i<lista.size();++i)
		{
			texto=lista.get(i).toString();
			texto2=codificador(texto,desplaza);	
			System.out.print(texto2+"\n");
		}	
			
	}
}
